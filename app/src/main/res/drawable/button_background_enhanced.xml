<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#0284C7"
                android:endColor="#0369A1"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="3dp"
                android:color="#38BDF8"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#06B6D4"
                android:endColor="#0EA5E9"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="3dp"
                android:color="#7DD3FC"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
</selector>
