<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#008800"
                android:endColor="#006600"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="3dp"
                android:color="#00AA00"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00CC00"
                android:endColor="#008800"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="3dp"
                android:color="#00FF00"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
</selector>
