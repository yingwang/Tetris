<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#9D4EDD"
                android:endColor="#7B2CBF"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="3dp"
                android:color="#C77DFF"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#C77DFF"
                android:endColor="#9D4EDD"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="3dp"
                android:color="#E0AAFF"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
</selector>
