<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#2E7D32"
                android:endColor="#388E3C"
                android:type="linear"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="3dp"
                android:color="#66BB6A"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#43A047"
                android:endColor="#4CAF50"
                android:type="linear"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="3dp"
                android:color="#81C784"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
</selector>
