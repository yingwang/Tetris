<?xml version="1.0" encoding="utf-8"?>
<!-- Main Menu Dialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/retro_dialog_background"
    android:padding="40dp"
    android:gravity="center">

    <!-- Game Title -->
    <TextView
        android:id="@+id/menuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T E T R I S"
        android:textColor="@color/text_accent"
        android:textSize="42sp"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:fontFamily="monospace"
        android:layout_marginBottom="16dp"
        android:shadowColor="@color/shadow_color"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETRO EDITION"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:letterSpacing="0.15"
        android:fontFamily="monospace"
        android:layout_marginBottom="40dp"/>

    <!-- New Game Button -->
    <Button
        android:id="@+id/menuBtnNewGame"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="NEW GAME"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:background="@drawable/menu_button_selector"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <!-- Settings Button -->
    <Button
        android:id="@+id/menuBtnSettings"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:background="@drawable/menu_button_selector"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <!-- Quit Button -->
    <Button
        android:id="@+id/menuBtnQuit"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="QUIT"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:background="@drawable/menu_button_selector"
        android:elevation="4dp"/>

</LinearLayout>
