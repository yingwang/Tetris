<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_background"
    android:padding="16dp">

    <!-- Speed Selection (visible before game starts) -->
    <LinearLayout
        android:id="@+id/speedSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_speed"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSpeed1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnSpeed2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnSpeed3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnSpeed4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="4"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnSpeed5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="5"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSpeed6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="6"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnSpeed7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="7"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnSpeed8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="8"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnSpeed9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="9"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/starting_lines"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLines0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="0"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnLines1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnLines2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnLines3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnLines4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="4"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLines5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="5"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnLines6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="6"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnLines7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="7"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnLines8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="8"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnLines9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="9"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_game"
            android:textSize="18sp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background_enhanced"/>
    </LinearLayout>

    <!-- Game Layout (visible during game) -->
    <LinearLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Score and Level Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/score"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/score_background"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"/>

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:text="@string/level"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/score_background"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"/>
        </LinearLayout>

        <!-- Game View -->
        <com.tetris.game.TetrisView
            android:id="@+id/tetrisView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="56dp"/>

        <!-- Control Buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <!-- Left button - far left -->
            <ImageButton
                android:id="@+id/btnLeft"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="@string/left"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:background="@drawable/button_background_enhanced"/>

            <!-- Rotate button - left of center -->
            <ImageButton
                android:id="@+id/btnRotate"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_toEndOf="@id/btnLeft"
                android:layout_toRightOf="@id/btnLeft"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_rotate"
                android:contentDescription="@string/rotate"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:background="@drawable/button_background_enhanced"/>

            <!-- Right button - far right -->
            <ImageButton
                android:id="@+id/btnRight"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="@string/right"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:background="@drawable/button_background_enhanced"/>

            <!-- Drop button - before Right button -->
            <ImageButton
                android:id="@+id/btnDrop"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_toStartOf="@id/btnRight"
                android:layout_toLeftOf="@id/btnRight"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_drop"
                android:contentDescription="@string/drop"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:background="@drawable/button_background_enhanced"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
