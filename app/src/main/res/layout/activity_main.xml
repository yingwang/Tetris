<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_background"
    android:padding="16dp">

    <!-- Game Configuration (visible before game starts) -->
    <LinearLayout
        android:id="@+id/speedSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="32dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_settings"
            android:textColor="@color/text_accent"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:shadowColor="@color/shadow_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!-- Speed Setting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed_label"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvSpeedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/accent_primary"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:shadowColor="@color/shadow_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <SeekBar
            android:id="@+id/seekBarSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="8"
            android:progress="4"
            android:progressTint="@color/accent_primary"
            android:thumbTint="@color/accent_primary"
            android:layout_marginBottom="40dp"/>

        <!-- Starting Lines Setting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/starting_lines_label"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvLinesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/accent_primary"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:shadowColor="@color/shadow_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <SeekBar
            android:id="@+id/seekBarLines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="9"
            android:progress="0"
            android:progressTint="@color/accent_primary"
            android:thumbTint="@color/accent_primary"
            android:layout_marginBottom="50dp"/>

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_game"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingHorizontal="60dp"
            android:paddingVertical="16dp"
            android:background="@drawable/button_background_enhanced"/>
    </LinearLayout>

    <!-- Game Layout (visible during game) -->
    <LinearLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:visibility="gone">

        <!-- Score and Level Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:paddingHorizontal="4dp">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/score"
                android:textColor="@color/text_accent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/score_background"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"/>

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:text="@string/level"
                android:textColor="@color/text_accent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/score_background"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"/>
        </LinearLayout>

        <!-- Menu Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="4dp">

            <Button
                android:id="@+id/btnNewGame"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:text="New"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_background_selector"/>

            <Button
                android:id="@+id/btnPause"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:text="Pause"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_background_selector"/>

            <Button
                android:id="@+id/btnMute"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:text="Mute"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_background_selector"/>

            <Button
                android:id="@+id/btnHighScores"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:text="Scores"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_background_selector"/>
        </LinearLayout>

        <!-- Game View -->
        <com.tetris.game.TetrisView
            android:id="@+id/tetrisView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"/>

        <!-- Control Buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Left button - far left -->
            <ImageButton
                android:id="@+id/btnLeft"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="@string/left"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:background="@drawable/button_background_enhanced"/>

            <!-- Rotate button - close to left button -->
            <ImageButton
                android:id="@+id/btnRotate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@id/btnLeft"
                android:layout_toRightOf="@id/btnLeft"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_rotate"
                android:contentDescription="@string/rotate"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:background="@drawable/button_background_enhanced"/>

            <!-- Right button - far right -->
            <ImageButton
                android:id="@+id/btnRight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="@string/right"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:background="@drawable/button_background_enhanced"/>

            <!-- Drop button - close to right button -->
            <ImageButton
                android:id="@+id/btnDrop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toStartOf="@id/btnRight"
                android:layout_toLeftOf="@id/btnRight"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_drop"
                android:contentDescription="@string/drop"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:background="@drawable/button_background_enhanced"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
