<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gb_lightest"
    android:padding="16dp">

    <!-- Game Configuration (visible before game starts) -->
    <LinearLayout
        android:id="@+id/speedSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="32dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_settings"
            android:textColor="@color/gb_darkest"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:typeface="monospace"/>

        <!-- Speed Setting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed_label"
            android:textColor="@color/gb_darkest"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/tvSpeedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/gb_darkest"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:typeface="monospace"/>

        <SeekBar
            android:id="@+id/seekBarSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="8"
            android:progress="0"
            android:progressTint="@color/gb_dark"
            android:thumbTint="@color/gb_darkest"
            android:layout_marginBottom="40dp"/>

        <!-- Starting Lines Setting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/starting_lines_label"
            android:textColor="@color/gb_darkest"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/tvLinesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/gb_darkest"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:typeface="monospace"/>

        <SeekBar
            android:id="@+id/seekBarLines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="9"
            android:progress="0"
            android:progressTint="@color/gb_dark"
            android:thumbTint="@color/gb_darkest"
            android:layout_marginBottom="50dp"/>

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_game"
            android:textColor="@color/gb_lightest"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingHorizontal="60dp"
            android:paddingVertical="16dp"
            android:typeface="monospace"
            android:background="@drawable/button_background_enhanced"/>
    </LinearLayout>

    <!-- Game Layout (visible during game) -->
    <LinearLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <!-- Score and Level Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="4dp">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:text="@string/score"
                android:textColor="@color/gb_darkest"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:typeface="monospace"
                android:background="@drawable/score_background"/>

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:text="@string/level"
                android:textColor="@color/gb_darkest"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:typeface="monospace"
                android:background="@drawable/score_background"/>
        </LinearLayout>

        <!-- Menu Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:paddingHorizontal="4dp">

            <Button
                android:id="@+id/btnNewGame"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="New"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/gb_lightest"
                android:typeface="monospace"
                android:background="@drawable/button_background_selector"/>

            <Button
                android:id="@+id/btnPause"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Pause"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/gb_lightest"
                android:typeface="monospace"
                android:background="@drawable/button_background_selector"/>

            <Button
                android:id="@+id/btnMute"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Mute"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/gb_lightest"
                android:typeface="monospace"
                android:background="@drawable/button_background_selector"/>

            <Button
                android:id="@+id/btnHighScores"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Score"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/gb_lightest"
                android:typeface="monospace"
                android:background="@drawable/button_background_selector"/>
        </LinearLayout>

        <!-- Game View -->
        <com.tetris.game.TetrisView
            android:id="@+id/tetrisView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Game Boy Style Controls -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="40dp">

            <!-- D-Pad (Left Side) -->
            <LinearLayout
                android:id="@+id/dpadLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center">

                <!-- D-Pad Top (Down button) -->
                <ImageButton
                    android:id="@+id/btnDown"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="@string/down"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:background="@drawable/button_dpad_gb"/>

                <!-- D-Pad Middle Row (Left and Right) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <ImageButton
                        android:id="@+id/btnLeft"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/ic_arrow_left"
                        android:contentDescription="@string/left"
                        android:scaleType="centerInside"
                        android:padding="10dp"
                        android:background="@drawable/button_dpad_gb"/>

                    <Space
                        android:layout_width="65dp"
                        android:layout_height="65dp"/>

                    <ImageButton
                        android:id="@+id/btnRight"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="@string/right"
                        android:scaleType="centerInside"
                        android:padding="10dp"
                        android:background="@drawable/button_dpad_gb"/>
                </LinearLayout>
            </LinearLayout>

            <!-- A/B Buttons (Right Side) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center">

                <!-- B Button (Rotate) - Upper -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <ImageButton
                        android:id="@+id/btnRotate"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_rotate"
                        android:contentDescription="@string/rotate"
                        android:scaleType="centerInside"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_circular_gb"/>
                </LinearLayout>

                <!-- A Button (Hard Drop) - Lower -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:id="@+id/btnDrop"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_drop"
                        android:contentDescription="@string/drop"
                        android:scaleType="centerInside"
                        android:padding="12dp"
                        android:background="@drawable/button_circular_gb"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
